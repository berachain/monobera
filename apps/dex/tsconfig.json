{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@bera/berajs/*": ["node_modules/@bera/berajs/*"],
      "@bera/berajs": ["node_modules/@bera/berajs"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "exclude": ["**/auth/*", "../../packages/berajs/*"],
  "include": [
    "next-env.d.ts",
    "async-jsx.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts",
    "../../packages/shared-ui/src/terms-of-use/terms-of-use.tsx",
    "../../packages/shared-ui/src/utils/analytics.ts"
  ]
}
