{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": false
    },

    "start": {
      "persistent": true,
      "cache": false
    },
    "lint": {},
    "lint:fix": {},
    "storybook": {},
    "storybook:build": {},
    "clean": {
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": [".env.devnet"]
    },
    "check-types": {
      "dependsOn": ["^build"],
      "cache": false
    }
  },
  "globalEnv": [
    "CI",
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",
    "VERCEL",
    "VERCEL_URL",
    "VERCEL_ENV"
  ]
}
