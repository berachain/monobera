{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"ignore": [
			".dist/",
			".turbo/",
			"**/node_modules/**",
			"proto/",
			"**/dist/**",
			"**/tailwind/**",
			".next",
			"**/next/**",
			"./packages/bera-router/**",
			"./apps/perp/public/static/**",
			"**/public/**"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2
	},
    "javascript" :{
        "formatter": {
            "quoteStyle":"double"
        }
    },
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off",
				"noRedeclare": "off",
				"noAssignInExpressions": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noCommaOperator": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"noSvgWithoutTitle": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"recommended": true
		}
	}
}