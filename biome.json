{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "ignore": [
      ".dist/",
      ".turbo/",
      "**/node_modules/**",
      "proto/",
      "**/dist/**",
      "**/tailwind/**",
      ".next",
      "**/next/**",
      "beracrocswap/*",
      "./apps/perp/public/static/**",
      "**/public/**",
      "ui/",
      ".vscode",
      "tsconfig.apps.base.json"
    ]
  },
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noRedeclare": "off",
        "noAssignInExpressions": "off",
        "noImplicitAnyLet": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noCommaOperator": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "noSvgWithoutTitle": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "recommended": true
    }
  }
}
